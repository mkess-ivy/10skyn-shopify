{% section 'shop-section-001' %}

<div class="sk-product-wrapper">
    <div class="featured-collection-3col">
      <div class="frow justify-start">
        {% for link in linklists.eyelashes.links %}
        <div class="collection-thumb-3 shop">
          <a href="{{ link.url }}">
            <img class="collection-thumb-img" src="{{ link.object.featured_image | img_url: 'master' }}" />
          </a>
          <div class="collection-thumb-title">
            {{ link.object.title | escape }}
            <div class="collection-price">{{ link.object.price | money_without_trailing_zeros }}</div>
            <div style="padding:8px 0;"></div>
            <a class="book-btn" href="{{ link.url }}" target="_blank" alt="View {{ link.object.title }}">
              <div>View Product</div>
            </a>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
</div>

