<div class="clear"></div>
<section class="reviews">
    <div class="frow centered">
        <div class="reviews-bg" style="background-image:url('{{ section.settings.reviews-bg.src | img_url: 'master' }}'); color: {{ section.settings.reviews-quote-color }};">
            <div class="reviews-small">{{ section.settings.reviews-title }}</div>
            <div class="reviews-msg">{{ section.settings.reviews-quote }}</div>
            <div class="reviews-small">{{ section.settings.reviews-author }}</div>
        </div>
    </div>
</section>
