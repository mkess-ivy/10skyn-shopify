{% schema %}
{
    "name": "Review Section",
    "settings": [
        {
            "type": "image_picker",
            "id": "reviews-bg",
            "label": "Background Image"
        },
        {
            "type": "color",
            "id": "reviews-quote-color",
            "label": "Reviews Text Color"
        },
        {
            "type": "text",
            "id": "reviews-title",
            "label": "Section Title"
        },
        {
            "type": "textarea",
            "id": "reviews-quote",
            "label": "Reviews Quote"
        },
        {
            "type": "text",
            "id": "reviews-author",
            "label": "Author's Name"
        }
    ]
}
{% endschema %}