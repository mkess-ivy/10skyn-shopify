<div class="clear"></div>
<section class="faqs">
    <h2 class="faqs-title">{{ section.settings.returns_faqs_name_001 }}</h2>
    {% for block in section.blocks %}
    <div class="faqs-single">
        <div class="faqs-q">{{ block.settings.returns_faqs_question }}</div>
        <div class="faqs-a">{{ block.settings.returns_faqs_answer }}</div>
    </div>
    {% endfor %}
</section>

{% schema %}
{
    "name": "Returns FAQs 001",
    "settings": [
        {
            "type": "text",
            "id": "returns_faqs_name_001",
            "label": "Returns FAQs Title 001"
        }
    ],
    "blocks": [
        {
            "type": "component",
            "name": "Returns FAQs 001",
            "settings": [
                {
                    "type": "text",
                    "id": "returns_faqs_question",
                    "label": "Returns Question"
                },
                {
                    "type": "textarea",
                    "id": "returns_faqs_answer",
                    "label": "Returns Answer"
                }
            ]
        }
    ]
}
{% endschema %}