<div class="clear"></div>
<section class="sk-section-wrapper about">
    <div class="frow justify-between">
        <div class="right-img" style="background-image: url('{{ section.settings.about-alpha-image | img_url: 'large' }}');"></div>

        <div class="text-combo">
            <div class="frow centered-column">
                <div class="text-combo-title">{{ section.settings.about-alpha-name }}</div>
                <div class="text-combo-desc">{{ section.settings.about-alpha-desc }}</div>
                
                {% if section.settings.alpha-btn-link %}
                <a class="text-combo-btn" href="{{ section.settings.alpha-btn-link }}">
                    <div>{{ section.settings.alpha-btn-text }}</div>
                </a>
                {% endif %}

            </div>
        </div>
    </div>
</section>

{% schema %}
{
    "name": "About Alpha",
    "settings": [
        {
            "type": "image_picker",
            "id": "about-alpha-image",
            "label": "Alpha Image"
        },
        {
            "type": "text",
            "id": "about-image-alt",
            "label": "Alt description for Image"
        },
        {
            "type": "text",
            "id": "about-alpha-name",
            "label": "Name of Alpha Content"
        },
        {
            "type":  "textarea",
            "id": "about-alpha-desc",
            "label": "Alpha Description"
        },
        {
            "type": "text",
            "id":  "alpha-btn-text",
            "label": "Alpha CTA Text"
        },
        {
            "type": "url",
            "id":  "alpha-btn-link",
            "label": "Alpha CTA Link"
        }
    ]
}
{% endschema %}