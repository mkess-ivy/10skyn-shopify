<div id="page" class="{% if section.settings.reduced-width %}desktop-8 desktop-push-2{% else %}desktop-12{% endif %} tablet-6 mobile-3">
  <h1>{{ page.title }}</h1>
  <div class="rte">
    {{ page.content }}
  </div>
</div>

{% schema %}
{
"name": "Page template",
"settings":
	[
      {
        "type": "checkbox",
        "id": "reduced-width",
        "label": "Reduce page width"
      }
	]
}
{% endschema %}
