<div class="clear"></div>
<section class="faqs">
    <h2 class="faqs-title">{{ section.settings.waxing_faqs_name_002 }}</h2>
    {% for block in section.blocks %}
    <div class="faqs-single">
        <div class="faqs-q">{{ block.settings.waxing_faqs_question }}</div>
        <div class="faqs-a">{{ block.settings.waxing_faqs_answer }}</div>
    </div>
    {% endfor %}
</section>

{% schema %}
{
    "name": "Waxing FAQs 002",
    "settings": [
        {
            "type": "text",
            "id": "waxing_faqs_name_002",
            "label": "Waxing FAQs Title 002"
        }
    ],
    "blocks": [
        {
            "type": "component",
            "name": "Waxing FAQs 002",
            "settings": [
                {
                    "type": "text",
                    "id": "waxing_faqs_question",
                    "label": "Waxing Question"
                },
                {
                    "type": "textarea",
                    "id": "waxing_faqs_answer",
                    "label": "Waxing Answer"
                }
            ]
        }
    ]
}
{% endschema %}