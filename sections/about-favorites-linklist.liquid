<div class="featured-collection-3col">
  <div class="frow justify-between">
    {% for link in linklists.favorites.links %}
      <div class="collection-thumb-3">
        <a href="{{ link.url }}"><img class="collection-thumb-img" src="{{ link.object.featured_image | img_url: 'master' }}" /></a>
        <div class="collection-thumb-title">
          <a href="{{ link.url }}" class="link-hover">{{ link.object.title | escape }}</a>
          <div class="collection-price">{{ link.object.price | money_without_trailing_zeros }}</div>
        </div>
        <div class="collection-thumb-desc">{{ link.object.description }}</div>
        <!-- <a href="{{ link.url }}" class="collection-thumb-link">
          <div>Book Now</div>
        </a> -->
      </div>
    {% endfor %}
  </div>
</div>