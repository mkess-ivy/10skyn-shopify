:root {
    --main-font: 'Prata',sans-serif;
    --body-font: 'Open Sans', sans-serif;
    --title-space: 30px;
    --section-space: 60px;
    --height-var: 5vh;
    --btn-bg: #000;
    --btn-color: #fff;
    --detail-color: #6F6E6F;
    --faqs-bg: #000;
    --link-color: white;
    --link-hover: red;
    --blue: #84C5C3;
    --white: #fff;
    --black: #1d1d1d;
    --purple: #cea5e1;
}

/* Global Styles */
.sk-section-wrapper {
    padding: calc(var(--section-space) * 2) 0 50px;
}
.sk-title-wrapper {
    padding: 125px 0 75px;
}
.sk-product-wrapper {
    padding-top: 0;
    padding-bottom: 0;
}
.sk-alpha-wrapper {
    padding: 150px 0;
}
.sk-faqs-wrapper {
    padding: 50px 0 75px;
}
.sk-ntk-wrapper {
    padding: 25px 0 150px;
}
.sk-section-name {
    font-family: var(--main-font);
    font-size: 48px;
    text-align: center;
    /* padding: 100px 0 50px; */
}
.sk-section-description {
    padding: 15px 0 25px;
    width: 56%;
    margin: auto;
    text-align: center;
    line-height: 1.4;
}
.gamma-title {
    padding-bottom: var(--section-space);
    text-align: center;
}
#footer-signup button {
    border: none;
}
.home-spacer {
    padding: 50px 0;
}
ul.nav li ul.submenu li {
    line-height: 1.2 !important;
}
ul.nav li ul.submenu li a {
    font-size: 14px;
}
ul.nav li ul.submenu li a:hover {
    color: var(--purple);
}
.sk-section-name.blog-article-title {
    width: 75%;
    margin: auto;
    font-size: 32px;
}
@media screen and (max-width: 992px) { 

    .sk-section-wrapper {
        padding: calc(var(--section-space) * 1) 0 30px;
    }
    .sk-section-description {
        width: 90%;
        margin: auto;
    }
    .sk-product-wrapper.product-2col {
        padding-left: 0 !important;
    }
    .sk-product-wrapper {
        padding-left: 20px;
    }
    
}
@media screen and (max-width:767px) {
    .sk-product-wrapper {
        width: 100%;
        margin: auto;
    }
    .home-spacer {
        padding:0;
    }
    .sk-title-wrapper {
        padding: 75px 0 25px;
    }
    .sk-alpha-wrapper {
        padding: 75px 0 150px;
    }
    .sk-section-name.blog-article-title {
        font-size: 40px;
    }
}
@media screen and (max-width: 600px) {
    .sk-section-name {
        font-size: 36px;
    }
    .sk-section-name.blog-article-title {
        width: 75%;
        margin: auto;
        font-size: 24px;
    }
    .sk-ntk-wrapper {
        padding: 25px 0 75px;
    }
}
@media screen and (max-width: 500px) {
    .sk-section-name {
        font-size: 28px;
    }
    .sk-title-wrapper {
        padding: 50px 0 75px;
    }
}
@media screen and (max-width: 414px) {
    .sk-product-wrapper {
        padding-left: 0;
    }
}

/* Page Titles */
.page-title-wrapper {
    padding-bottom: 0px;
}
.page-title-wrapper.collection {
    padding-bottom: var(--section-space);
}

/* Homepage */
h3.post-title {
    width: 100%;
    
    margin-top: 10px;
}

@media screen and (max-width: 740px) {
    h3.post-title {
        width: 75%;
        margin: 20px auto 0;
        font-size: 22px;
    }
}


/* Book Page */
.callout_banner {
    background-color: var(--black);
    color: var(--white);
    padding: 70px 50px;
}
.callout_header {
    font-family: var(--main-font);
    font-size: 24px;
    padding-bottom: 15px;
}
.callout_desc {
    line-height: 1.4;
    font-size: 16px;
}

@media screen and (max-width: 740px) {
    .callout_desc {
        line-height: 1.4;
        font-size: 14px;
    }
}


/* Buttons  */
.book-btn {
    display: block;
    padding: 10px 0 0;
}
.book-btn:hover {
    text-decoration: none;
}
.book-btn div {
    text-transform: uppercase;
    font-size: 13px;
    border-bottom: 1px solid;
    width: auto;
    display: inline;
}


/* Featured Collections */
.book-page-item {
    width: 30%;
    margin-right: 30px;
    padding-bottom: 100px;
}
.book-page-item img {
    width: 100%;
}
.book-bg-img {
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    height: calc(var(--height-var) * 9);
    margin-bottom: var(--title-space);
}
.featured-collections-slider {
    padding-top:0 !important;
}
@media screen and (max-width: 992px) { 
    .book-page-item {
        width: 45%;
        margin-right: 15px;
    }
    .book-bg-img {
        margin-bottom: calc(var(--title-space) * 0.3);
        height: calc(var(--height-var) * 7);
    }
}
@media screen and (max-width: 767px) {
    .book-page-item {
        width: 47%;
        margin-right: 13px;
    }
    .featured-collections-slider {
        margin-bottom:0 !important;
    }
    .book-bg-img {
        margin-bottom: calc(var(--title-space) * 0.3);
        height: calc(var(--height-var) * 5);
    }
}
@media screen and (max-width: 500px) { 
    .book-page-item {
        width: 100%;
        /* margin-right: 0; */
        margin: auto;
        padding-bottom: 50px;
    }
    .book-bg-img {
        margin-bottom: calc(var(--title-space) * 0.3);
        height: calc(var(--height-var) * 5);
    }
}


/* CTAs with Images */
.right-img-text-combo {
    padding-bottom: calc(var(--section-space) * 2);
}
.right-img {
    background-position: top center;
    background-size: cover;
    background-repeat: no-repeat;
    width: 60%;
    height: calc(var(--height-var) * 15);
}
.right-img.lashext {
    height: calc(var(--height-var) * 21);
}
.text-combo {
    width: 35%;
}
.text-combo-btn {
    width: 100%;
}
.text-combo-btn div {
    width: 135px;
    font-size: 14px;
    text-align: center;
    padding: 10px 7px;
    background-color: var(--black);
    color: var(--btn-color);
    text-transform: uppercase;
    border-radius: 4px;
    box-shadow: 2px 2px 3px var(--detail-color);
    margin: 0;
}
.text-combo-btn div:hover {
    background-color: var(--purple);
    color: var(--black);
    transition: .3s;
}
.text-combo-title {
    font-size: 48px;
    font-family: var(--main-font);
    padding-bottom: var(--title-space);
    width: 100%;
}
.text-combo-desc {
    font-size: 18px;
    line-height: 1.4;
    padding-bottom: var(--title-space);
}
@media screen and (max-width: 992px) { 
    .right-img {
        width: 60%;
        height: calc(var(--height-var) * 13);
    }
    .right-img.lashext {
        height: calc(var(--height-var) * 15);
    }
    .text-combo {
        width: 32%;
        margin: 50px auto;
    }
    .text-combo-title {
        font-size: 36px;
    }
    .text-combo-desc {
        font-size:18px;
    }
}
@media screen and (max-width: 767px) {
    .right-img {
        width: 100%;
        height: calc(var(--height-var) * 9);
    }
    .right-img.lashext {
        height: calc(var(--height-var) * 15);
    }
    .text-combo {
        width: 85%;
    }
    .text-combo-desc,
    .text-combo-title {
        text-align: center;
    }
    .text-combo-btn div {
        margin: auto;
    }
}
@media screen and (min-width: 501px) and (max-width: 600px) {
    .text-combo {
        width: 65%;
        margin: 30px auto 0;
    }
    .right-img {
        height: calc(var(--height-var) * 9);
        width: 100%;
    }
    .text-combo-title {
        font-size: 36px;
    }
}
@media screen and (max-width: 500px) {
    .text-combo {
        width: 80%;
    }
    .text-combo-title {
        font-size: 28px;
        padding-bottom: calc(var(--title-space) * 0.5);
    }
    
    .right-img.lashext {
        height: calc(var(--height-var) * 10);
    }
}

