/* Book CTA Section */
.cta-bg {
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    width:100%;
    
}
.cta-bg.other {
    margin-top: 100px;
}
.cta-section {
  margin: 0 auto;
  text-align: center;
  max-width:500px;
  padding: calc(var(--section-space) *1.5) 0;
}
.cta-title {
  font-family: 'Prata', sans-serif;
  font-size: 36px;
  padding-bottom: 30px;
  line-height: 1.2;
}
.cta-description {
  font-family: 'Open Sans', sans-serif;
  font-size: 22px;
  padding-bottom: 40px;
