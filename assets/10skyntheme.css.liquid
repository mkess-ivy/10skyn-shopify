.contact_title {
    font-family: var(--main-font);
    font-size: 22px;
}
.contact_desc {
    padding-top: 15px;
    font-size: 16px;
}
.contact_desc a {
    text-decoration: underline;
}
.headline_links {
    font-size: 16px;
    margin: auto;
    width: 80%;
    text-align: center;
    padding: 20px 25px;
}
.cta {
    padding-right: 20px;
    text-align: center;
    color: var(--black);
}
.cta div {
    padding: 8px 13px;
    border: 1px solid var(--black);
}
.subscribe_group {
    height: 35vh;
    width:100%;
    font-size: 36px;
    text-align: center;
}
.headline_desc {
    font-size: 18px;
    padding: 15px 0 35px;
    line-height: 1.4;
}
.subscribe {
    font-size: 22px;
}

@media screen and (max-width: 992px) {
    .headline_group {
        width: 100%;
        font-size: 24px;
        max-width: 625px;
    }
    .cta {
        margin: 20px auto 0;
    }
}

/* Privacy */
.privacy-squeeze {
    max-width: 1000px;
    margin: auto;
    width: 80%;
    word-break: keep-all;
    word-wrap: break-word;
}

/* Footer Adjustments */
.footer-text p,
.footer-social p {
    font-size: 14px;
    line-height: 1.4;
}
.footer-menu ul li a {
    font-size: 14px;
}
#footer-signup {
    margin-top: 20px;
}
.footer-left a {
    font-size: 12px;
}