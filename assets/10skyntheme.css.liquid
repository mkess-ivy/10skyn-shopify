:root {
    --main-font: 'Prata',sans-serif;
    --body-font: 'Open Sans', sans-serif;
    --title-space: 30px;
    --section-space: 60px;
    --height-var: 5vh;
    --btn-bg: #000;
    --btn-color: #fff;
    --faqs-bg: #000;
    --link-color: white;
    --link-hover: red;
    --blue: #84C5C3;
    --white: #fff;
}

/* Global Styles */
.sk-section-wrapper {
    padding: calc(var(--section-space) * 2) 0;
}
.sk-title-wrapper {
    padding: 125px 0 75px;
}
.sk-product-wrapper {
    padding-top: 0;
    padding-bottom: 0;
}
.sk-alpha-wrapper {
    padding: 150px 0;
}
.sk-faqs-wrapper {
    padding: 50px 0 75px;
}

.sk-ntk-wrapper {
    padding: 25px 0 150px;
}
.sk-section-name {
    font-family: var(--main-font);
    font-size: 48px;
    text-align: center;
    /* padding: 100px 0 50px; */
}
.sk-section-description {
    padding: 15px 0 25px;
    width: 56%;
    margin: auto;
    text-align: center;
    line-height: 1.4;
}
.gamma-title {
    padding-bottom: var(--section-space);
    text-align: center;
}
#footer-signup button {
    border: none;
}
.home-spacer {
    padding: 50px 0;
}
@media screen and (max-width: 992px) { 

    .sk-section-wrapper {
        padding: calc(var(--section-space) * 1) 0;
    }
    .sk-section-description {
        width: 90%;
        margin: auto;
    }
    .sk-product-wrapper.product-2col {
        padding-left: 0 !important;
    }
    .sk-product-wrapper {
        padding-left: 20px;
    } 
}
@media screen and (max-width:767px) {
    .sk-product-wrapper {
        width: 90%;
        margin: auto;
    }
    .home-spacer {
        padding:0;
    }
}
@media screen and (max-width: 600px) {
    .collection-thumb-3 {
        width: 75%;
        margin: 0 auto 75px;
    }
    .sk-section-name {
        font-size: 36px;
    }
}
@media screen and (max-width: 500px) {
    .sk-section-name {
        font-size: 28px;
    }
    .sk-title-wrapper {
        padding: 50px 0 25px;
    }
}
@media screen and (max-width: 414px) {
    .sk-product-wrapper {
        padding-left: 0;
    }
}




/* Page Titles */
.page-title-wrapper {
    padding-bottom: 0px;
}
.page-title-wrapper.collection {
    padding-bottom: var(--section-space);
}


/* Buttons  */
.book-btn {
    display: block;
    padding: 10px 0 0;
}
.book-btn:hover {
    text-decoration: none;
}
.book-btn div {
    text-transform: uppercase;
    font-size: 13px;
    border-bottom: 1px solid;
    width: auto;
    display: inline;
}


/* Featured Collections */
.book-page-item {
    width: 30%;
    margin-right: 30px;
    padding-bottom: 100px;
}
.book-page-item img {
    width: 100%;
}
.book-bg-img {
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    height: calc(var(--height-var) * 7);
    margin-bottom: var(--title-space);
}
@media screen and (max-width: 992px) { 
    .book-page-item {
        width: 45%;
        margin-right: 15px;
    }
}
@media screen and (max-width: 767px) {
    .book-page-item {
        width: 47%;
    }
}
@media screen and (max-width: 500px) { 
    .book-page-item {
        width: 75%;
        /* margin-right: 0; */
        margin: auto;
        padding-bottom: 50px;
    }
    .book-bg-img {
        margin-bottom: calc(var(--title-space) * 0.3);
        height: calc(var(--height-var) * 5);
    }
}


/* CTAs with Images */
.right-img-text-combo {
    padding-bottom: calc(var(--section-space) * 2);
}
.right-img {
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    width: 50%;
    height: calc(var(--height-var) * 9);
}
.text-combo {
    width: 35%;
}
.text-combo-btn {
    width: 100%;
}
.text-combo-btn div {
    width: 125px;
    text-align: center;
    padding: 10px 0;
    background-color: var(--btn-bg);
    color: var(--btn-color);
    text-transform: uppercase;
}
.text-combo-title {
    font-size: 48px;
    font-family: var(--main-font);
    padding-bottom: var(--title-space);
}
.text-combo-desc {
    font-size: 22px;
    padding-bottom: var(--title-space);
}
@media screen and (max-width: 992px) { 
    .right-img {
        width: 60%;
        height: calc(var(--height-var) * 13);
    }
    .text-combo {
        width: 32%;
        margin: 50px auto;
    }
    .text-combo-title {
        font-size: 36px;
    }
    .text-combo-desc {
        font-size:18px;
    }
}
@media screen and (max-width: 767px) {
    .right-img {
        width: 100%;
        height: calc(var(--height-var) * 9);
    }
    .text-combo {
        width: 60%;
    }
    .text-combo-desc,
    .text-combo-title {
        text-align: center;
    }
}
@media screen and (min-width: 501px) and (max-width: 600px) {
    .text-combo {
        width: 65%;
        margin: 30px auto 0;
    }
    .right-img {
        height: calc(var(--height-var) * 9);
        width: 100%;
    }
    .text-combo-title {
        font-size: 36px;
    }
}
@media screen and (max-width: 500px) {
    .text-combo {
        width: 80%;
    }
    .text-combo-title {
        font-size: 28px;
        padding-bottom: calc(var(--title-space) * 0.5);
    }
    .text-combo-btn div {
        margin: auto;
    }
}







/* FAQs */

.accordion-item {
    border: 1px solid var(--faqs-bg);
    margin-bottom: 10px;
}
.accordion-item a {
    display: block;
    background: var(--faqs-bg);
    padding: 15px 10px;
    color: var(--link-color ) !important;
    transition: none;
}
.accordion-item a:visited {
    color: var(--link-color ) !important;
}
.accordion-item a:hover {
    color: var(--link-color ) !important;
}

.content {
    display: none;
    padding: 10px 0 0 10px;
}

/* Book CTA Section */
.cta-section {
  margin: 0 auto;
  text-align: center;
  width: 35%;
  padding: calc(var(--section-space) *2) 0;
}
.cta-title {
  font-family: 'Prata', sans-serif;
  font-size: 36px;
  padding-bottom: 30px;
  line-height: 1.2;
}
.cta-description {
  font-family: 'Open Sans', sans-serif;
  font-size: 22px;
  padding-bottom: 40px;
  line-height: 1.4;
}
.cta-btn {
  color: white;
  display: block;
  width: 130px;
  margin: auto;
}
.cta-btn:hover {
    color: var(--link-hover);
    text-decoration: none;
}
.cta-btn div {
  font-size: 18px;
  text-transform: uppercase;
  background: black;
  border: 1px solid black;
  width: 130px;
  padding: 10px 0;
  margin: auto;
}
.cta-btn div:hover {
    background: white;
    /* border: 1px solid black; */
}

@media screen and (max-width: 1200px) { 
    .cta-section {
        width: 45%;
      }
}
@media screen and (max-width: 992px) { 
    .cta-section {
        width: 65%;
      }
}
@media screen and (max-width: 600px) { 
    .cta-section {
        width: 90%;
    }
    .cta-title {
        font-size: 32px;
    }
}
@media screen and (max-width: 480px) { 
    .cta-title {
        font-size: 26px;
    }
}




/* 3 column for collections */
.featured-collection-3col {
    margin: 0 auto;
}
.collection-thumb-3 {
    width: 29%;
    margin-right: 40px;
    margin-bottom: 100px;
}
.collection-thumb-3 img {
    width: 100%;
}
.collection-thumb-title {
    font-family: var(--body-font);
    font-weight: initial;
    padding: 15px 0;
    width: 80%;
    font-size: 20px;
}
.collection-thumb-link div,
.collection-product-link div {
    text-transform: uppercase;
    font-size: 14px;
    padding-bottom: 3px;
    border-bottom: 1px solid;
    width: 80px;
}
.collection-thumb-link:hover,
.collection-product-link:hover {
    text-decoration: none;
}
.collection-product-link div {
    width: 100px;
}
.collection-thumb-link:hover {
    color: blue;
    text-decoration: none;
}
@media screen and (max-width:1280px) {
    .featured-collection-3col {
        width: 90%;
    }
    .collection-thumb-3 {
        margin-right: 30px;
    }
}
@media screen and (max-width: 992px) { 
    .collection-thumb-3 {
        width: 31%;
        margin-right: 15px;
    }
    .featured-collection-3col {
        width: 100%;
    }
}
@media screen and (max-width: 767px) { 
    .collection-thumb-3 {
        width: 43%;
        margin-right: 20px;
    }
    .featured-collection-3col {
        width: 90%;
    }
    .collection-thumb-title {
        font-size: 18px;
    }
}
@media screen and (max-width: 600px) {
    .collection-thumb-3 {
        width: 100%;
        margin: 0 auto 75px;
    }
    
    .featured-collection-3col, .featured-collection-2col {
        width: 75%;
    }
}
@media screen and (max-width: 414px) {
    .featured-collection-3col,
    .featured-collection-2col {
        width: 90%;
    }
    .collection-thumb-2 {
        width: 100%;
    }
    .collection-thumb-title {
        text-align: center;
        margin: auto;
    }
    .collection-thumb-desc {
        text-align: center;
    }
    .collection-thumb-link div,
    .collection-product-link div {
        margin: auto;
        text-align: center;
    }
}


/* 2-column for collections */
.featured-collection-2col {
    width: 60%;
    margin: 0 auto;
}
.collection-thumb-2 {
    width: 47%;
    margin-bottom: calc(var(--title-space) * 3);
}
.collection-thumb-2 img {
    width: 100%;
}
@media screen and (max-width: 992px) {
    .featured-collection-2col {
        width: 80%;
        
    }
}
@media screen and (max-width:767px) {
    .featured-collection-2col {
        width: 90%;
        margin: 0 auto;
    }
}
@media screen and (max-width:600px) {
    .collection-thumb-2 {
        width: 75%;
        margin: 0 auto 75px;
    }
}
@media screen and (max-width: 414px) {
    .collection-thumb-2 {
        width: 100%;
    }
}


/* Need to Know */

.ntk-option {
    width: 31%;
    background: var(--blue);
    text-align: center;
    padding: 10px 20px 30px;
    color: var(--white);
}
.ntk-option-title {
    padding: calc(var(--title-space) - 10px) 0;
    font-size: 28px;
    font-weight: bold;
}
.ntk-section {
    padding-top: 100px;
}

@media screen and (max-width: 992px) { 
    .ntk-icon {
        width: 85px;
        margin: auto;
    }
    .ntk-option {
        width: 80%;
        margin: 0 auto 50px;
    }
}

@media screen and (max-width:767px) {
    .ntk-option {
        width: 80%;
        margin: 0 auto 20px;
    }
    .ntk-icon {
        display: none;
    }
}
@media screen and (max-width: 414px) {
    .ntk-option-title {
        font-size: 22px;
    }
}


/* Our Story  */
.sk-section-wrapper.about,
.sk-section-wrapper.about-reverse {
    width: 80%;
    margin: 0 auto;
    padding: var(--section-space) 0;
}

.about .text-combo,
.about-reverse .text-combo {
    width: 40%;
}

.team-single {
    width: 30%;
    margin-bottom: var(--section-space);
}
.team-name {
    font-size: 20px;
    padding: 10px 0;
}
@media screen and (max-width:992px) {
    .sk-section-wrapper.about,
    .sk-section-wrapper.about-reverse {
        width: 100%;
    }
    .about .text-combo,
    .about-reverse .text-combo {
        width: 30%;
    }
}
@media screen and (max-width: 767px) {
    .about .text-combo,
    .about-reverse .text-combo {
        width: 60%;
    }
}
@media screen and (max-width: 600px) {
    /* .about .text-combo,
    .about-reverse .text-combo {
        width: 65%;
    } */
    .team-single {
        width: 75%;
        margin: auto;
        padding-bottom: 75px;
    }
}
@media screen and (max-width: 480px) {
    .sk-section-wrapper.about {
        padding: var(--section-space) 0 0;
    }
    .sk-section-wrapper.about-reverse {
        padding: 0 0 var(--section-space);
    }
}
@media screen and (max-width: 414px) {
    .about .text-combo,
    .about-reverse .text-combo {
        width: 80%;
    }
    .team-single {
        width:90%;
    }
}



/* Blog */
.recent-post {
    padding-bottom: calc(var(--section-space) * 2);
}
.sk-section-wrapper.blog {
    padding-top: calc(var(--section-space) * 2);
}
.sk-section-wrapper.blog-article {
    padding-top: calc(var(--section-space) * 3);
    padding-bottom: 15px;
}
.article-hero-image {
    width: 55%;
    margin: 100px auto 30px;
}
.article-hero-content {
    /* max-width: 1200px; */
    margin: 0 auto;
    width: 75%;
}


/* Reviews */
.reviews {
    margin: 150px 0 75px;
}
.reviews-bg {
    width: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: 200px 0;
    color: red;
    text-align: center;
    font-weight: bold;
    font-size: 32px;
}
.vimeo-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    pointer-events: none;
    overflow: hidden;
 }
 .vimeo-wrapper iframe {
    width: 100vw;
    height: 56.25vw; /* Given a 16:9 aspect ratio, 9/16*100 = 56.25 */
    min-height: 100vh;
    min-width: 177.77vh; /* Given a 16:9 aspect ratio, 16/9*100 = 177.77 */
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
 }
.no-margin {
    margin: 0;
}


/* Alpha */
.alpha-section {
    padding: 100px 0;
}



/* Contact */
.sk-contact-form {
    padding-bottom: 150px;
}

/* Privacy */
.privacy-squeeze {
    max-width: 1000px;
    margin: auto;
    width: 80%;
}